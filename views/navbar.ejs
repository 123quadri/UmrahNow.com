<script>
  // Generate initials and populate user info
  document.addEventListener("DOMContentLoaded", function () {
    const name = "<%= name %>" || "User";
    const nameWords = name.split(" ");
    let initials = "";

    if (nameWords.length >= 2) {
      initials = nameWords[0].charAt(0) + nameWords[1].charAt(0);
    } else {
      initials = nameWords[0].charAt(0) + (nameWords[0].charAt(1) || "");
    }

    // Set initials in profile button
    document.querySelector(".initials-text").textContent =
      initials.toUpperCase();

    // Set initials in dropdown avatar
    document.querySelector(".profile-avatar").textContent =
      initials.toUpperCase();

    // Set user name in welcome message
    const userNameDisplay = document.querySelector(".user-name-display");
    if (userNameDisplay) {
      userNameDisplay.textContent = name;
    }

    // Set user name in dropdown
    const userDropdownName = document.querySelector(".user-dropdown-name");
    if (userDropdownName) {
      userDropdownName.textContent = name;
    }
  });
</script>
