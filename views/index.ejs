<body>
  <%- include('navbar');  -%>
<section id="top-cont" class="hero-section">
  <div class="container-fluid p-0">
    <div class="row g-0 min-vh-75 align-items-center">
      <!-- Video Section -->
      <div class="col-lg-7 position-relative z-index-1">
        <div class="video-container">
          <video src="videos/video.mp4" autoplay muted loop class="w-100 h-100 object-fit-cover"></video>
          <div class="video-overlay"></div>
        </div>
      </div>
      
      <!-- Content Section -->
      <div class="col-lg-5 d-flex align-items-center ">
        <div class="content-wrapper p-5">
          <div class="guide-header mb-4">
            <h2 class="display-6 fw-bold text-dark mb-3">Your Journey Starts Here</h2>
            <p class="lead text-muted">Follow our simple step-by-step guide to book your perfect Umrah experience</p>
          </div>
          
          <div class="steps-container">
            <div class="step-item d-flex align-items-start mb-3">
              <div class="step-number">
                <span class="badge bg-primary rounded-circle p-2 me-3">1</span>
              </div>
              <div class="step-content">
                <h6 class="fw-semibold mb-1">Choose Your Destination</h6>
                <p class="text-muted mb-0 small">Select the holy city where you want to perform your Umrah</p>
              </div>
            </div>
            
            <div class="step-item d-flex align-items-start mb-3">
              <div class="step-number">
                <span class="badge bg-primary rounded-circle p-2 me-3">2</span>
              </div>
              <div class="step-content">
                <h6 class="fw-semibold mb-1">Select Your Package</h6>
                <p class="text-muted mb-0 small">Choose from our curated packages that suit your needs and budget</p>
              </div>
            </div>
            
            <div class="step-item d-flex align-items-start mb-3">
              <div class="step-number">
                <span class="badge bg-primary rounded-circle p-2 me-3">3</span>
              </div>
              <div class="step-content">
                <h6 class="fw-semibold mb-1">Complete Your Details</h6>
                <p class="text-muted mb-0 small">Fill in your personal information and travel preferences</p>
              </div>
            </div>
            
            <div class="step-item d-flex align-items-start mb-3">
              <div class="step-number">
                <span class="badge bg-warning rounded-circle p-2 me-3">4</span>
              </div>
              <div class="step-content">
                <h6 class="fw-semibold mb-1">Save Your Token</h6>
                <p class="text-muted mb-0 small">Keep your unique token number safe for tracking your booking</p>
              </div>
            </div>
            
            <div class="step-item d-flex align-items-start mb-4">
              <div class="step-number">
                <span class="badge bg-success rounded-circle p-2 me-3">5</span>
              </div>
              <div class="step-content">
                <h6 class="fw-semibold mb-1">Track Your Journey</h6>
                <p class="text-muted mb-0 small">Monitor your tour status as we prepare everything for you</p>
              </div>
            </div>
          </div>
          
          <div class="cta-section mt-4">
            <a href="#cities" class="btn btn-primary btn-lg px-4 py-2 rounded-pill">
              Start Your Journey
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right ms-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
              </svg>
            </a>
            <p class="small text-muted mt-2 mb-0">Trusted by thousands of pilgrims worldwide</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="cities" class="cities-section py-5">
  <div class="container-fluid px-4">
    <!-- Section Header -->
    <div class="text-center mb-5">
      <h2 class="section-title display-5 fw-bold text-dark mb-3">Choose Your Sacred Destination</h2>
      <p class="section-subtitle lead text-muted mb-4">Discover the holy cities where your spiritual journey awaits</p>
      <div class="title-divider mx-auto"></div>
    </div>

    <!-- Cities Carousel -->
    <div class="cities-carousel" data-flickity='{ 
      "contain": true, 
      "wrapAround": false, 
      "autoPlay": false,
      "pauseAutoPlayOnHover": true,
      "pageDots": true,
      "prevNextButtons": true,
      "cellAlign": "left",
      "groupCells": false,
      "freeScroll": false,
      "percentPosition": false
    }'>
      <%cityDetailsLists.forEach(function(cityDetailsList){%>
      <div class="city-card-wrapper">
        <form action="/common" method="post" class="city-form">
          <input type="hidden" name="city_name" value="<%=cityDetailsList.cityName%>" />
          <button type="submit" class="city-card-button">
            <div class="city-card">
              <div class="city-image-container">
                <img class="city-image" src="/uploads/<%=cityDetailsList.cityImage%>" alt="<%=cityDetailsList.cityName%>">
                <div class="city-overlay">
                  <div class="city-overlay-content">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" class="explore-icon" viewBox="0 0 16 16">
                      <path d="M8 0C5.829 0 4.07 1.759 4.07 3.929c0 2.399 3.93 7.071 3.93 7.071s3.93-4.672 3.93-7.071C11.93 1.759 10.171 0 8 0zm0 5.357c-.896 0-1.621-.725-1.621-1.621S7.104 2.114 8 2.114s1.621.725 1.621 1.621S8.896 5.357 8 5.357z"/>
                    </svg>
                    <span class="explore-text">Explore</span>
                  </div>
                </div>
              </div>
              <div class="city-info">
                <h4 class="city-name"><%=cityDetailsList.cityName%></h4>
                <p class="city-description">Sacred destination for your spiritual journey</p>
                <div class="city-badge">
                  <span class="badge bg-primary">Available Now</span>
                </div>
              </div>
            </div>
          </button>
        </form>
      </div>
      <%})%>
    </div>

    <!-- Navigation Hint -->
    <div class="text-center mt-2">
      <p class="small text-muted">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-right me-2" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5zm14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5z"/>
        </svg>
        Swipe or use arrows to browse all destinations
      </p>
    </div>
  </div>
</section>

