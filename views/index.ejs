/* CITY CSS */


  
.cities-section {
  /* background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 50%, #f8f9fa 100%); */
  position: relative;
  overflow: hidden;
}

.cities-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="%23000" opacity="0.02"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  pointer-events: none;
}

.section-title {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.title-divider {
  width: 80px;
  height: 4px;
  background: linear-gradient(90deg, #20c997, #17a2b8);
  border-radius: 2px;
}

/* Flickity Custom Styling */
.cities-carousel {
   /* background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); */
  margin: 0 -10px;
  padding: 20px 0;
}

.cities-carousel .flickity-viewport {
  overflow: visible;
}

.cities-carousel .flickity-slider {
  background-color: #fafafa;
  display: flex;
  align-items: stretch;
}

.cities-carousel .flickity-page-dots {
  bottom: -50px;
}

.cities-carousel .flickity-page-dots .dot {
  width: 12px;
  height: 12px;
  background: #20c997;
  border-radius: 50%;
  margin: 0 8px;
  transition: all 0.3s ease;
}

.cities-carousel .flickity-page-dots .dot.is-selected {
  background: #17a2b8;
  transform: scale(1.2);
}

.cities-carousel .flickity-prev-next-button {
  width: 50px;
  height: 50px;
  background: white;
  border-radius: 50%;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  border: none;
  top: 45%;
}

.cities-carousel .flickity-prev-next-button:hover {
  background: #f8f9fa;
  box-shadow: 0 6px 20px rgba(0,0,0,0.15);
}

.cities-carousel .flickity-prev-next-button .flickity-button-icon {
  fill: #20c997;
}

/* City Card Styling */
.city-card-wrapper {
  width: 320px;
  margin: 0 15px;
  padding: 0;
  flex-shrink: 0;
}

.city-form {
  width: 100%;
  height: 100%;
}

.city-card-button {
  background: none;
  border: none;
  padding: 0;
  width: 100%;
  cursor: pointer;
  transition: transform 0.3s ease;
}

.city-card-button:hover {
  transform: translateY(-8px);
}

.city-card {
  background: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  height: 400px;
  margin: 10px;
}

.city-card:hover {
  box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.city-image-container {
  position: relative;
  height: 200px;
  overflow: hidden;
}

.city-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.city-card:hover .city-image {
  transform: scale(1.1);
}

.city-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(32,201,151,0.8) 0%, rgba(23,162,184,0.8) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.city-card:hover .city-overlay {
  opacity: 1;
}

.city-overlay-content {
  text-align: center;
  color: white;
}

.explore-icon {
  margin-bottom: 8px;
  animation: bounce 2s infinite;
}

.explore-text {
  font-weight: 600;
  font-size: 16px;
}

.city-info {
  padding: 20px;
  text-align: center;
}

.city-name {
  font-size: 1.5rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8px;
}

.city-description {
  color: #6c757d;
  font-size: 0.9rem;
  margin-bottom: 15px;
  line-height: 1.4;
}

.city-badge .badge {
  font-size: 0.75rem;
  padding: 6px 12px;
  border-radius: 20px;
  background-color: #20c997 !important;
}

